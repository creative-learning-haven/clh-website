---
const links = [
	{ href: 'https://facebook.com', label: 'Facebook', abbr: 'FB' },
	{ href: 'https://twitter.com', label: 'Twitter', abbr: 'TW' },
	{ href: 'https://instagram.com', label: 'Instagram', abbr: 'IG' },
];
---

<aside class="social-float" aria-label="Social links">
	<div class="tray">
		{links.map((link) => (
			<a class="tray-link" href={link.href} aria-label={link.label} rel="noopener" target="_blank">
				{link.abbr}
			</a>
		))}
	</div>
</aside>

<style>
	.social-float {
		position: fixed;
		top: 30vh;
		right: 12px;
		z-index: 900;
	}

	.tray {
		display: flex;
		flex-direction: column;
		background: var(--color-donate);
		color: #0b2d1f;
		border-radius: 4px;
		box-shadow: 0 2px 10px rgba(0,0,0,.18);
		overflow: hidden;
	}

	.tray-link {
		display: block;
		padding: 10px 14px;
		text-decoration: none;
		font-weight: 900;
		letter-spacing: .06em;
		text-align: center;
		border-bottom: 1px solid rgba(0,0,0,.1);
	}

	.tray-link:last-child { border-bottom: 0; }

	.tray-link:hover { background: #ffe27a; }

	@media (max-width: 900px) {
		.social-float { display: none; }
	}
</style>


