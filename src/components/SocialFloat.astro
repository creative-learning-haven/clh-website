---
import fbIcon from '../assets/5305153_fb_facebook_facebook logo_icon.svg';
import twIcon from '../assets/5305170_bird_social media_social network_tweet_twitter_icon.svg';
import igIcon from '../assets/5335781_camera_instagram_social media_instagram logo_icon.svg';
---

<aside class="social-float" aria-label="Social links">
	<div class="tray">
		<a class="tray-link recolor-on-hover" href="https://facebook.com" aria-label="Facebook" rel="noopener" target="_blank">
			<img src={fbIcon.src} alt="" width="18" height="18" />
		</a>
		<a class="tray-link recolor-on-hover" href="https://twitter.com" aria-label="Twitter" rel="noopener" target="_blank">
			<img src={twIcon.src} alt="" width="18" height="18" />
		</a>
		<a class="tray-link recolor-on-hover" href="https://www.instagram.com/creativelearninghaven/" aria-label="Instagram" rel="noopener" target="_blank">
			<img src={igIcon.src} alt="" width="18" height="18" />
		</a>
	</div>
</aside>

<style>
	.social-float {
		position: fixed;
		top: 30vh;
		right: 12px;
		z-index: 900;
	}

	.tray {
		display: flex;
		flex-direction: column;
		background: var(--color-donate);
		color: #0b2d1f;
		box-shadow: 0 2px 10px rgba(0,0,0,.18);
		overflow: hidden;
	}

	.tray-link {
		display: grid;
		place-items: center;
		padding: 10px 14px;
		text-decoration: none;
		font-weight: 900;
		letter-spacing: .06em;
		text-align: center;
	}

	.tray-link:last-child { border-bottom: 0; }

	.tray-link:hover { background: #ffe27a; }

	@media (max-width: 900px) {
		.social-float { display: none; }
	}
</style>


