---
import fbIcon from '../assets/facebook_icon.svg';
import igIcon from '../assets/instagram_icon.svg';
import ytIcon from '../assets/youtube_icon.svg';
import { social } from '../data/site.js';
---

<aside class="social-float" aria-label="Social links">
	<div class="tray">
		<a class="tray-link recolor-on-hover" href={social.facebook} aria-label="Facebook" rel="noopener" target="_blank">
			<img src={fbIcon.src} alt="" width="18" height="18" />
		</a>
		<a class="tray-link recolor-on-hover" href={social.instagram} aria-label="Instagram" rel="noopener" target="_blank">
			<img src={igIcon.src} alt="" width="18" height="18" />
		</a>
		<a class="tray-link recolor-on-hover" href={social.youtube} aria-label="YouTube" rel="noopener" target="_blank">
			<img src={ytIcon.src} alt="" width="18" height="18" />
		</a>
	</div>
</aside>

<style>
	.social-float {
		position: fixed;
		top: 30vh;
		right: 12px;
		z-index: 900;
	}

	.tray {
		display: flex;
		flex-direction: column;
		background: var(--color-yellow);
		color: var(--color-dark-green);
		box-shadow: 0 2px 10px rgba(0,0,0,.18);
		overflow: hidden;
	}

	.tray-link {
		display: grid;
		place-items: center;
		padding: 10px 14px;
		text-decoration: none;
		font-weight: 900;
		letter-spacing: .06em;
		text-align: center;
	}

	.tray-link:last-child { border-bottom: 0; }

	.tray-link:hover { background: var(--color-light-yellow); }

	@media (max-width: 900px) {
		.social-float { display: none; }
	}
</style>


