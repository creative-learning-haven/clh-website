---
import { company, social } from '../data/site.js';
---

<footer class="site-footer">
	<div class="container">
		<div class="footer-grid">
			<div class="block">
				<h3>Contact Us</h3>
				<a class="email" href={`mailto:${company.email}`}>{company.email}</a>
			</div>
			<div class="block">
				<h3>Connect With Us</h3>
				<div class="socials">
					<a href={social.facebook} target="_blank" rel="noopener">Facebook</a>
					<a href={social.instagram} target="_blank" rel="noopener">Instagram</a>
				</div>
			</div>
			<div class="block credit">Â© {new Date().getFullYear()} {company.name}</div>
		</div>
	</div>
</footer>

<style>
	.site-footer {
		margin-top: 48px;
		background: var(--color-subscribe-dark);
		color: var(--color-subscribe-foreground);
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 32px 16px;
	}

	.footer-grid {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 24px;
	}

	.block h3 {
		margin: 0 0 8px;
		font-family: 'Lulo Clean Custom', 'Avenir Custom', Avenir, Inter, system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
		font-size: 0.65rem;
		letter-spacing: .06em;
		text-transform: uppercase;
		color: var(--white-strong);
	}

	.email { color: var(--white-strong); text-decoration: none; }
	.email:hover { text-decoration: underline; }

	.socials { display: flex; flex-direction: column; }
	.socials a { color: var(--white-strong); text-decoration: none; }
	.socials a:hover { color: var(--color-hover); }

	.credit { align-self: end; opacity: .85; }

	@media (max-width: 720px) {
		.footer-grid { grid-template-columns: 1fr; }
	}
</style>


