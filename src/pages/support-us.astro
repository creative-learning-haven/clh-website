  }

  @media (max-width: 768px) {
    .main-container {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .two-column-grid {
      grid-template-columns: 1fr;
    }

    .two-rows-layout .row {
      grid-template-columns: 1fr;
