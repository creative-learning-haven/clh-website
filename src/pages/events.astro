---
import SecondaryPage from '../layouts/SecondaryPage.astro';
import events from '../data/events.json';
type EventItem = { dateLine: string; title: string; description: string };
const list = events as EventItem[];
---

<SecondaryPage title="Upcoming Events">
	<ul class="event-list">
		{list.map((e) => (
			<li class="event">
				<div class="date">
					<div>{e.dateLine}</div>
				</div>
				<div class="details">
					<h2 class="event-title">{e.title}</h2>
					<p class="event-desc">{e.description}</p>
				</div>
			</li>
		))}
	</ul>
</SecondaryPage>

<style>
	.event-list { list-style: none; padding: 0; margin: 24px 0 0; display: grid; gap: 36px; }

	.event { display: grid; grid-template-columns: 80px 1fr; gap: 24px; align-items: start; }

	.date { color: var(--color-hover); font-weight: 800; max-width: 80px; }
	.date div + div { margin-top: 4px; }

	.event-title {
		font-family: 'Lulo Clean Custom', 'Avenir Custom', Avenir, Inter, system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
		font-size: 1.5em;
		color: #2c4450;
		margin: 0 0 8px;
		text-transform: uppercase;
	}

	.event-desc { margin: 0; color: var(--color-hover); max-width: 900px; }

	@media (max-width: 720px) {
		.event { grid-template-columns: 1fr; }
	}
</style>



