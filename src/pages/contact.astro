---
import SecondaryPage from '../layouts/SecondaryPage.astro';
import luluWithKidsImg from '../assets/lulu_with_kids.avif';
import { social } from '../data/site';
---

<SecondaryPage title="Contact" heroImage={luluWithKidsImg.src}>
	<section class="contact-content">
		<div class="contact-container">
			<h2 class="contact-title">Thank you for your interest in Creative Learning Haven!</h2>
			
			<div class="contact-info">
				<p>If you have any questions or want to get in touch, you can email us at <a href="mailto:creativelearninghaven.ug@gmail.com" class="email-link">creativelearninghaven.ug@gmail.com</a>.</p>
				
				<p>You can also follow us or reach out on social media:</p>
				
				<ul class="social-links">
					<li><a href={social.instagram} class="social-link">Instagram</a></li>
					<li><a href={social.facebook} class="social-link">Facebook</a></li>
					<li><a href={social.youtube} class="social-link">Youtube</a></li>
				</ul>
			</div>
		</div>
	</section>

	{/* Newsletter Signup Section */}
	<section class="newsletter-signup">
		<div class="newsletter-container">
			<div class="newsletter-content">
				<h2>Stay Connected</h2>
				<p>Subscribe to our newsletter to learn how you can get involved and receive the latest updates on our work.</p>
				<form class="newsletter-form" action="/api/subscribe" method="POST">
					<div class="form-group">
						<input 
							type="email" 
							name="email" 
							placeholder="Enter your email address" 
							required
							class="newsletter-input"
						>
						<button type="submit" class="newsletter-button">Subscribe</button>
					</div>
				</form>
			</div>
		</div>
	</section>
</SecondaryPage>

<style>
	.contact-content {
		padding: 60px 16px;
	}

	.contact-container {
		max-width: 800px;
		margin: 0 auto;
		text-align: left;
	}

	.contact-title {
		font-size: 32px;
		color: var(--color-dark-green);
		margin-bottom: 30px;
		font-family: 'Lulo Clean Custom', 'Avenir Custom', Avenir, Inter, system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
		text-transform: uppercase;
		line-height: 1.3;
	}

	.contact-info p {
		font-size: 18px;
		line-height: 1.7;
		color: var(--color-text);
		/* margin-bottom: 20px; */
	}

	.email-link {
		color: var(--color-accent);
		text-decoration: none;
		font-weight: 600;
	}

	.email-link:hover {
		text-decoration: underline;
	}

	.social-links {
		list-style: disc;
		padding-left: 20px;
		margin: 20px 0;
	}

	.social-link {
		color: var(--color-dark-green);
		text-decoration: none;
		font-size: 18px;
		font-weight: 600;
		display: inline-block;
		transition: color 0.2s ease;
	}

	.social-link:hover {
		color: var(--color-accent);
		text-decoration: underline;
	}

	/* Newsletter Signup Styles */
	.newsletter-signup {
		/* padding: 80px 16px; */
		text-align: left;
	}

	.newsletter-container {
		max-width: 800px;
		margin: 0 auto;
	}

	.newsletter-content h2 {
		font-size: 28px;
		color: var(--color-dark-green);
		margin-bottom: 15px;
		font-family: 'Lulo Clean Custom', 'Avenir Custom', Avenir, Inter, system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
		text-transform: uppercase;
	}

	.newsletter-content p {
		font-size: 18px;
		line-height: 1.7;
		color: var(--color-text);
		margin-bottom: 30px;
	}

	.newsletter-form {
		display: flex;
		justify-content: flex-start;
		gap: 10px;
	}

	.form-group {
		display: flex;
		align-items: center;
		gap: 10px;
		background: var(--color-white);
		border-radius: 8px;
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
		overflow: hidden;
		min-width: 400px;
	}

	.newsletter-input {
		flex: 1;
		padding: 12px 16px;
		border: none;
		outline: none;
		font-size: 16px;
		color: var(--color-text);
	}

	.newsletter-button {
		background: var(--color-accent);
		color: var(--color-teal-ink);
		border: none;
		padding: 12px 20px;
		border-radius: 8px;
		font-weight: 800;
		cursor: pointer;
		transition: background 0.2s ease;
		white-space: nowrap;
	}

	.newsletter-button:hover {
		background: var(--color-accent-dark);
	}

	@media (max-width: 768px) {
		.contact-content {
			padding: 40px 16px;
		}

		.contact-title {
			font-size: 24px;
		}

		.contact-info p {
			font-size: 16px;
		}

		.social-link {
			font-size: 16px;
		}

		.newsletter-signup {
			padding: 60px 16px;
		}

		.newsletter-content h2 {
			font-size: 24px;
		}

		.newsletter-content p {
			font-size: 16px;
		}

		.newsletter-form {
			flex-direction: column;
			align-items: stretch;
			gap: 10px;
		}

		.form-group {
			flex-direction: column;
			align-items: stretch;
			width: 100%;
			min-width: auto;
		}

		.newsletter-input {
			padding: 10px 16px;
		}

		.newsletter-button {
			padding: 10px 16px;
			width: 100%;
		}
	}
</style>



