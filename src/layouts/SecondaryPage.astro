---
import Layout from './Layout.astro';
const { title } = Astro.props as { title: string };
---

<Layout>
	<section class="secondary-page">
		<h1>{title}</h1>
		<div class="content">
			<slot />
		</div>
	</section>
</Layout>

<style>
	.secondary-page {
		max-width: 900px;
		margin: 32px auto;
		padding: 0 16px;
	}

	/* Match About title styling */
	.secondary-page h1 {
		color: var(--color-hover);
		margin-bottom: 12px;
		margin-top: 100px;
		text-align: center;
	}
</style>


