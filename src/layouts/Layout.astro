---
import NavBar from "../components/NavBar.astro";
import SocialFloat from "../components/SocialFloat.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="stylesheet" href="/src/styles/global.css" />
		<meta name="generator" content={Astro.generator} />
		<title>Creative Learning Haven</title>
	</head>
	<body>
		<NavBar />
		<main id="page">
			<slot />
		</main>
		<Footer />
		<SocialFloat />
	</body>
</html>

<style>
	:root {
		--color-brand: #d79b4f; /* warm golden header */
		--color-accent: #8fe0c4; /* mint accent */
		--color-donate: #ffd24d; /* bright yellow for donate and socials */
		--color-ink: #162126;
		--section-light: #e8e8e8;
	}

	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}

	body {
		color: var(--color-ink);
		padding-top: 60px; /* offset for fixed header */
	}

	#page { min-height: 70vh; }
</style>
